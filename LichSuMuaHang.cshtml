@model List<ShopNPC.Models.DonHang>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Func<decimal, string> money = n => string.Format("{0:#,0}₫", n);
}

<div class="container" style="margin-top:40px; margin-bottom:60px;">
    <h2 style="text-align:center; margin-bottom:25px;">Lịch sử mua hàng</h2>

    @if (!Model.Any())
    {
        <div style="text-align:center; margin-top:20px;">
            <p>Bạn chưa có đơn hàng nào.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Trạng thái</th>
                    <th>Tổng cộng</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var don in Model)
                {
                    <tr>
                        <td>@don.MaDon</td>
                        <td>@don.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@don.TrangThai</td>
                        <td>@money(don.TongCong)</td>
                        <td>
                            <a href="@Url.Action("ChiTietDonHang", "Home", new { id = don.MaDon })"
                               class="btn btn-sm btn-outline-primary">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
